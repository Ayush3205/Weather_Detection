    <script>
        const getCurrentDay = () => {
            let week = new Array(7);
            week[0] = "Sunday";
            week[1] = "Monday";
            week[2] = "Tuesday";
            week[3] = "Wednesday";
            week[4] = "Thursday";
            week[5] = "Friday";
            week[6] = "Saturday";

            let currentTime = new Date();
            days = week[currentTime.getDay()];
            let day = document.getElementById('day');
            day.innerText = days;
        };

        getCurrentDay();
    </script>
